<%= form_for(@entry, html: { multipart: true }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
  <%= f.text_field :title, placeholder: "Title..." %>
</div>
<div class="field">
	<%= f.text_area :content, placeholder: "Share something......." %>
</div>
<span class="picture">
	<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "input"%>
</span>
<%= f.submit "Post", class: "btn btn-primary col-md-2" %>
<% end %>