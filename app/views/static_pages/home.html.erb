<% if logged_in %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info center jumbotron">
      <%= render 'shared/user_info' %>      
    </section>
    <section class="micropost_form">
      <%= render 'shared/entry_form' %>
    </section>
  </aside> 
  <div class="col-md-8 lastest-entry">    
    <% @lastest_entries.each do |item| %>
      <%= render item %>
    <%end%>
    <div class="row"><%= will_paginate @lastest_entries %></div>
  </div> 
</div>
<% else %>
<div class="center jumbotron">
  <h1>First look</h1>

  <h2>
    This is the home page for the
    <a href="#"></a>
    sample application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
