<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>      
    </section>
    <section class="stat">
      <%= render "shared/stats" %>
    </section>
    <% if current_user? @user %>
    <section class="micropost_form">
      <%= render 'shared/entry_form' %>
    </section>
    <%end%>
  </aside>
  <div class="col-md-8">
    <div class="row">
      <%= render 'follow_form' if logged_in %>
    </div>
    <div class="row">
      <div class="container-fluid">
        <% if @user.entries.any? %>
        <%= render @entries %>
        <div class="row"><%= will_paginate @entries %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>