<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= render 'users/follow_form' if logged_in %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.entries.any? %>
    <ol class="microposts">
              
    </ol>
    <% end %>
  </div>
</div>